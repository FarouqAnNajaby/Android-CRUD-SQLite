<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormAddActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kodeMakanan"
        android:layout_margin="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:hint="Kode Makanan" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namaMakanan"
        android:layout_margin="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:hint="Nama Makanan" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asalMakanan"
        android:layout_margin="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:hint="Asal Daerah" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bahanMakanan"
        android:layout_margin="20dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:hint="Bahan" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carabuatMakanan"
        android:layout_margin="20dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:hint="Cara Buat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/caraBuatMakan"
                android:id="@+id/btnSave"
                android:layout_margin="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:layout_below="@+id/caraBuatMakan"
                android:layout_toRightOf="@+id/btnSave"
                android:layout_margin="20dp"
                android:id="@+id/btnCancel"
                android:layout_marginTop="10dp"/>

    </RelativeLayout>

</LinearLayout>